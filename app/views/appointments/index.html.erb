<h1 class="text-center">Your appointment list</h1>

<%= @appointments %>

<div class="text-center padded">
  <%= link_to "Create a appointment", new_appointment_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @appointments.each do |appointment| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">

          An appointment
          <div class="card-body">
            <%= link_to appointment.name, appointment_path(appointment) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
